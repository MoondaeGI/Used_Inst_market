{{>layout/header}}
<body>
<h1>게시글 등록</h1>
<div class="col-md-12">
    <form>
        <div class="form-group">
            <label for="title">제목</label>
            <input type="text" class="form-control" id="title" placeholder="제목을 입력하십시오">
        </div>
        <div class="form-group">
            <label for="category">카테고리</label>
            <form>
                <select id="upper-category">
                    {{#upper-category}}
                        <option value={{upperCategoryNo}}>{{name}}</option>
                    {{/upper-category}}
                </select>
                <select id="lower-category"></select>
                <select id="brand"></select>
            </form>
        </div>
        <div class="form-group">
            <label for="local">지역</label>
            <form>
                <select id="upper-local">
                    {{#upper-local}}
                        <option value="{{upperLocalNo}}">{{name}}</option>
                    {{/upper-local}}
                </select>
                <select id="lower-local"></select>
            </form>
        </div>
        <div class="form-group">
            <label for="user">작성자</label>
            {{#user}}
                <input type="text" class="form-control" id="user" value="{{name}}" name="{{userNo}}" readonly>
            {{/user}}
        </div>
        <div class="form-group">
            <label for="price">가격</label>
            <input type="number" class="form-control" id="price" placeholder="가격을 입력하십시오">
        </div>
        <div class="form-group">
            <label for="content">내용</label>
            <textarea type="text" class="form-control" id="content" placeholder="내용을 입력하십시오"></textarea>
        </div>
        <div class="form-group">
            <input type="file" id="images"/>
        </div>
    </form>
    <a href="/" role="button" class="btn btn-secondary">취소</a>
    <button type="button" class="btn btn-primary" id="btn-save">등록</button>
</div>
{{>layout/footer}}